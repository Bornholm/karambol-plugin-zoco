{% extends 'base.html.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <h1>Zoco</h1>
        <form action="{{ path('plugins_zoco_search') }}" method="get" class="form">
          <div class="input-group input-group-lg">
            <span class="input-group-addon" id="search-input"><i class="fa fa-search"></i></span>
            <input type="text" name="q" class="form-control"
              value="{{ search }}"
              placeholder="{{ 'plugins.zoco.search.search_placeholder'|trans() }}"
              aria-describedby="search-input">
          </div>
        </form>
      </div>
    </div>
    <div class="col-md-12">
      <ul class="list-group">
        {% for hit in results.hits %}
          <li class="list-group-item">
            <h4 class="list-group-item-heading"></h4>
            <p class="list-group-item-text">...</p>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
